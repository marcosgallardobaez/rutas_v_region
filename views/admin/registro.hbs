<div class="container">
    <h1>{{titulo}}</h1>

{{!mensajes flash}}

{{#if succes_msg}}
    <div class="alert alert-success" id="success-message">{{succes_msg}}</div>
{{/if}}

{{#if errores}}
    <div class="alert alert-danger">
        <ul>
            {{#each errores}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
    </div>
{{/if}}


    <form action="registro" method="post" class="form-registro">
        <label for="nombre">Nombre:</label>
        <input type="text" id="nombre" name="nombre">

        <label for="email">Correo Electrónico</label>
        <input type="email" id="email" name="email" required>

        <label for="password">Contraseña:</label>
        <input type="password" id="password" name="password" required>

        <label for="repetirPassword">Confirmar contraseña</label>
        <input type="password" id="repetirPassword" name="repetirPassword" required>
    <button type="submit">Registrarse</button>

    <p>Ya poseo cuenta <a href="login">Ingresar</a></p>
    
    </form>
</div>